<div class="columns is-mobile">
    <div class="column is-half is-offset-one-quarter">
        <% if @thread.errors.any? %>
        <div>
            <% @thread.errors.full_messages.each do |error| %>
            <div class="notification is-danger">
                <button class="delete"></button>
                <%= error %>
            </div>
            <% end %>
        </div>
        <% end %>

        <%= form_for @thread do |f| %>
        <div class="field">
            <%= f.label :title, class: 'label' %>
            <div class="control">
                <%= f.text_field :title, class: "input", placeholder: "Title" %>
            </div>
        </div>

        <div class="field">
            <%= f.label :content, class: "label" %>
            <div class="control">
                <%= f.text_area :content, class: "textarea", placeholder: "Entry content" %>
            </div>
        </div>

        <div class="field is-grouped">
            <div class="control">
                <%= f.button :simpan, class: "button is-link" %>
            </div>
        </div>
        <% end %>
    </div>
</div>